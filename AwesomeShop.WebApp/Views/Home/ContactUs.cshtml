@{
    ViewData["Title"] = "Contact Us";
}

<div class="text-center">
    <h1 class="display-4">Best Contact Form</h1>
    <form method="post">
        <fieldset>
            <div class="row">
                <div class="col-8 offset-2">
                    <div class="form-group">
                        <label for="ContactName">Contact Name</label>
                        <input class="form-control" type="text" name="ContactName" value="" />
                    </div>
                </div>
                <div class="col-8 offset-2">
                    <div class="form-group">
                        <label for="EmailAddress">Email Address</label>
                        <input class="form-control" type="text" name="EmailAddress" value="" />
                    </div>
                </div>
                <div class="col-4 offset-4">
                    <div class="form-group">
                        <input class="btn btn-block btn-primary" type="submit" name="EmailAddress" value="Submit"/>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
    <h2 class="text-success">@Html.Raw(ViewBag.Message)</h2>
</div>
